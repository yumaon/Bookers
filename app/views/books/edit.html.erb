<h1>Editing Book</h1>
<% if @book.errors.any? %>
    <div class="validates">
      <h2 class="validates-text"><%=@book.errors.count %>errors prohibited this book from being saved:</h2>

      <ul class="validates-message">
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label>Title</label>
    <%=f.text_field :title %>
  </div>

  <div class="field">
    <label>Body</label>
    <%=f.text_area :body %>
  </div>

  <div class="actions">
    <%=f.submit 'Update Book' %>
  </div>

<% end %>

<%=link_to "Show",book_path(@book.id) %> | <%= link_to"Back",'/books' %>

