<h1>Books</h1>
<h4>Title</h4>
<h4>Body</h4>
<% @books.each do |book| %>

  <span><%=book.title %></span>
　<span><%=book.body %></span>
　<a><%=link_to "Show",book_path(book.id) %></a>
　<a><%=link_to "Edit",edit_book_path(book.id) %></a>
　<a><%=link_to "Destroy",destroy_book_path(book.id), method: :delete, "data-confirm"=>"Are you sure?" %></a>

<% end %>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>